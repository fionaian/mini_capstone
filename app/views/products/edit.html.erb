<h1>Edit Product</h1>
<% if @product && @product.errors.any? %>
  <%= @product.errors.full_messages %>
<% end %>
<form action="/products/<%= @product.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <div>
    Name: <input type="text" name="input_name" value="<%= @product.name %>">
  </div>
  <div>
    Price: <input type="text" name="input_price" value="<%= @product.price %>">
  </div>
  <div>
    Description: <input type="text" name="input_description" value="<%= @product.description %>">
  </div>
  <div>
    Choose a supplier:
    <select name="supplier_id">
      <% @suppliers.each do |supplier| %>
        <option value="<%= supplier.id %>"><%= supplier.name %></option>
      <% end %>
    </select>
  </div>
  <input type="submit" value="Update product">
</form>